        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_action_choices"
        android:spinnerMode="dropdown"/>
    -->
    <TextView
        android:id="@+id/taskDes_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/taskName_TextView"
        android:layout_alignLeft="@id/taskName_TextView"
        android:layout_below="@+id/taskCheckBox"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/colorDarkGray"
        android:text="@string/taskDescription" />

